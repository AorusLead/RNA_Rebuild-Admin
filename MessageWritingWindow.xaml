<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RNA_Rebuild_Admin"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="RNA_Rebuild_Admin.MessageWritingWindow"
        mc:Ignorable="d"
        Title="MessageWritingWindow" Height="293" Width="350">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="10,10,10,48"/>
        <TextBox x:Name="MessageTextBox" Margin="10,10,10,48" TextWrapping="Wrap" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto" mah:TextBoxHelper.Watermark="Enter text here" mah:TextBoxHelper.UseFloatingWatermark="True" mah:TextBoxHelper.AutoWatermark="True" UseLayoutRounding="False"/>
        <Button Background="LimeGreen" BorderBrush="ForestGreen" Content="Send" Margin="0,224,134,6" Height="Auto" Grid.RowSpan="2" HorizontalAlignment="Right" Width="76" Click="Button_Click" IsDefault="True"/>

    </Grid>
</Window>
